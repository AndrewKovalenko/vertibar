{
  "name": "vertibar",
  "version": "0.0.1",
  "description": "JS utils library with a human face",
  "scripts": {
    "lint": "eslint ./src && eslint ./tests",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack",
    "test": "nyc ava",
    "prepublishOnly": "npm run build",
    "postpublish": "git push --follow-tags --set-upstream origin ${branch}",
    "install": "npm build",
    "run-dev": "webpack --progress --colors --watch"
  },
  "ava": {
    "require": "babel-register",
    "failFast": true,
    "concurrency": 5,
    "verbose": true
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.1",
    "nyc": "10.3.2",
    "uglify-js": "^2.8.0",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.5.1"
  },
  "main": "dist/index.js",
  "author": "Andrew Kovalenko",
  "license": "MIT"
}
